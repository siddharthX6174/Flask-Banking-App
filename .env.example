# Copy this file to .env and fill in your values
# Example DB_URI formats:
# postgresql+psycopg2://user:password@host:5432/database_name
# postgresql://user:password@host:5432/database_name

# PostgreSQL URI (required):
DB_URI=

# Secret key for Flask sessions (recommended to set in production)
SECRET_KEY=change-me

# Optional debug flag
DEBUG=False

# Automatic table creation on app startup (set to False to manage schema manually)
AUTO_CREATE_TABLES=True
